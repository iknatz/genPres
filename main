from pptx import Presentation
from pptx.util import Inches

# Create a presentation object
prs = Presentation()

# --- Slide 1: Title Slide ---
title_slide_layout = prs.slide_layouts[0]  # 0 = Title Slide layout
slide1 = prs.slides.add_slide(title_slide_layout)

title = slide1.shapes.title
subtitle = slide1.placeholders[1]

title.text = "My Presentation Title"
subtitle.text = "Subtitle or Author Info"

# --- Slide 2: Bullet Points ---
bullet_slide_layout = prs.slide_layouts[1]  # 1 = Title and Content layout
slide2 = prs.slides.add_slide(bullet_slide_layout)

title = slide2.shapes.title
content = slide2.placeholders[1]

title.text = "Agenda"
points = ["Introduction", "Problem Statement", "Solution", "Conclusion"]

# Add bullet points
for point in points:
    p = content.text_frame.add_paragraph()
    p.text = point

# Save the presentation
prs.save("my_presentation.pptx")